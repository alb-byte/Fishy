<Window x:Class="Fishy.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fishy.View"
        mc:Ignorable="d"
       >

    <DockPanel x:Name="MainDockPanel">

        <Frame x:Name="AccountFrame"
               NavigationUIVisibility="Hidden" 
               Content="{Binding CurrentAccountPage}"
               DockPanel.Dock="Left"
               Width="550"
               />

        <Frame x:Name="InfoFrame"
               NavigationUIVisibility="Hidden" 
               Content="{Binding CurrentInfoPage}"
               DockPanel.Dock="Right"
               />
    </DockPanel>
</Window>
