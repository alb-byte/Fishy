<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Fishy.View.Resources.UIControls.NavigationPanel">

    <ControlTemplate x:Key="CollapseWindowButton" TargetType="Button">
        <Grid x:Name="CollapseButton"  Width="25" Height="20" Background="#FF282E33">
            <Path Data="M15.975,6.3 L1.075,6.3" x:Name="Collapse" Fill="#FF282E33" Height="10" StrokeStartLineCap="Flat" Stretch="Fill" StrokeEndLineCap="Flat" Stroke="#FFE0E0E0" StrokeMiterLimit="12" Width="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="6.4,0,6.6,5"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="CollapseButton" Property="Background" Value="#FF5C5C5C"/>
                <Setter TargetName="Collapse" Property="Stroke" Value="Black"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>