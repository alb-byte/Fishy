<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Fishy.View.Resources.UIControls.NavigationPanel">

    <ControlTemplate x:Key="CloseWindowButton" TargetType="Button">
        <Grid  x:Name="CloseButton" Width="25" Height="20" Background="#FF282E33">
            <Path x:Name="Close1" Data="M18,-2 L0.125,16" Fill="#FF282E33" Height="10" Stretch="Fill" Width="10" Stroke="#FFE0E0E0" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat" StrokeMiterLimit="12"/>
            <Path x:Name="Close2" Data="M0.75,1.0333333 L15,15" Fill="#FF282E33" HorizontalAlignment="Left" Height="10" Margin="7.5,5,0,0" StrokeStartLineCap="Flat" Stretch="Fill" StrokeEndLineCap="Flat" Stroke="#FFE0E0E0" StrokeMiterLimit="12" VerticalAlignment="Top" Width="10"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="CloseButton" Property="Background" Value="#FFFF4141"/>
                <Setter TargetName="Close1" Property="Stroke" Value="Black"/>
                <Setter TargetName="Close2" Property="Stroke" Value="Black"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>