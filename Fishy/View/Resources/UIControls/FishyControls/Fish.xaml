<UserControl x:Class="FISHY.View.Resources.UserControls.StandartUserControls.Fish"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="700">
    
    <StackPanel x:Name="MainStackPanel"
                Orientation="Vertical">
        <Image  
              Source="{Binding IMG}"
              Height="200"
              Width="200"
              Style="{DynamicResource PhotoStyle}"/>

        <Button  
            Width="500"
            Style="{DynamicResource DialogButtonStyle2}"
            Content="{Binding NAME}"
            FontSize="35"/>

        <TextBlock x:Name="DiscriptionTextBlock"
                    Style="{DynamicResource MessageTextBlockStyle}"
                    Text="{Binding DESCRIPTION}"
                    Width="700"
                    MaxHeight="320"/>
    </StackPanel>
</UserControl>

