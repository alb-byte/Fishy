<UserControl x:Class="FISHY.View.Resources.UserControls.StandartUserControls.EntryMessageField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="600">
    
    <StackPanel Orientation="Horizontal"
                Background="Transparent">

        <TextBox x:Name="MainTextBox"
                 Style="{DynamicResource EntryMessageTextBoxStyle}" />

        <Button x:Name="SendButton"
                Content="Отправить"
                Style="{DynamicResource SendMessageButtonStyle}" />
    </StackPanel>
</UserControl>
