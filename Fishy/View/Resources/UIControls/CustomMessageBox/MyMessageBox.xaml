<Window x:Class="FISHY.View.Resources.UserControls.MyMessageBox.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FISHY.View.Resources.UserControls.MyMessageBox"
        mc:Ignorable="d"
        Title="MessageBox" Height="200" Width="200" WindowStyle="None" ResizeMode="NoResize" Foreground="{x:Null}" Background="#708090" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Topmost="True">
        <Grid>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.25*"/>
                </Grid.RowDefinitions>
            <TextBlock FontSize="20" FontWeight="Bold" FontFamily="Lato" Name="Title" Foreground="#FFFF4141" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" FontWeight="Bold" FontSize="15" FontFamily="Lato" Name="MessageContainer" TextWrapping="WrapWithOverflow" Margin="10" Foreground="White"/>
                <Button FontSize="18" FontFamily="Lato" Grid.Row="2" Height="30" Width="100" Style="{DynamicResource ButtonStyle}" Click="Button_Click">ОК</Button>
            </Grid>
        </Grid>
</Window>